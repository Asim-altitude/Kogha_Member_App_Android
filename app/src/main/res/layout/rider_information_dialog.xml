<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white_color"
    android:clickable="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="10 mins"
            android:textColor="@color/theme_primary"
            android:textSize="20dp"
            android:visibility="gone"
            android:id="@+id/estimated_time_to_reach"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:padding="10dp"
            android:text="Kogha Customer"
            android:textColor="@color/white_color"
            android:textSize="18dp"
            android:background="@drawable/bumbleride_header_pickup"
            android:id="@+id/bodyguard_status_text"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@color/black_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/bodyguard_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_avatar" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/bodyguard_image"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black_color"
                    android:textSize="18dp"
                    android:id="@+id/bodyguard_name"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/star"
                        android:tint="@color/theme_primary"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:text="3.0"
                        android:textColor="@color/black_color"
                        android:textSize="20dp"
                        android:textStyle="normal"
                        android:id="@+id/bodyguard_rating"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bodyguard_call_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/call_icon_b" />

                <ImageView
                    android:id="@+id/bodyguard_chat_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/chat_icon_b" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>