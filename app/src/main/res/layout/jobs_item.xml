<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/order_item_bg"
        >
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:background="@drawable/my_order_left_drawable"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center_horizontal"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_avatar"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@color/white_color"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:id="@+id/my_ord_number"
                    android:textSize="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:padding="10dp"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:padding="10dp"
                >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:background="@drawable/my_order_total_drawable"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="job starts in"
                    android:textColor="@color/card_shadow_2"
                    android:textSize="13dp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:11:04"
                    android:textColor="@color/white_color"
                    android:textStyle="bold"
                    android:id="@+id/time_job"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:background="@drawable/my_order_right_drawable"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/meetup_location"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle_redish"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meetup Location"
                    android:textColor="@color/white_color"
                    android:textSize="13dp"
                    android:padding="2dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kuala Lampur Federal Malaysia"
                    android:textColor="@color/white_color"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textStyle="normal"
                    android:padding="2dp"
                    android:textSize="13dp"
                    />

              </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/meetup_time"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle_redish"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meetup Date &amp; Time"
                        android:textColor="@color/white_color"
                        android:textSize="13dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11/11/2018 8:00am"
                        android:textColor="@color/white_color"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textStyle="normal"
                        android:padding="2dp"
                        android:textSize="13dp"
                        />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/instructions"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle_redish"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instructions"
                        android:textColor="@color/white_color"
                        android:textSize="13dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Be on time, Formal event"
                        android:textColor="@color/white_color"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textStyle="normal"
                        android:padding="2dp"
                        android:textSize="13dp"
                        />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/job_hours"
                    android:layout_margin="10dp"
                    android:background="@drawable/rectangle_redish"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Hours"
                        android:textColor="@color/white_color"
                        android:textSize="13dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8Hrs, 8am to 4pm"
                        android:textColor="@color/white_color"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textStyle="normal"
                        android:padding="2dp"
                        android:id="@+id/my_ord_meet_location"
                        android:textSize="13dp"
                        />

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/payment"
                    android:layout_margin="10dp"
                    android:padding="2dp"
                    android:background="@drawable/rectangle_redish"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Earnings"
                        android:textColor="@color/white_color"
                        android:textSize="13dp"
                        android:padding="2dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RM200"
                        android:textColor="@color/white_color"
                        android:maxLines="2"
                        android:minLines="2"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:textSize="14dp"
                        />

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>