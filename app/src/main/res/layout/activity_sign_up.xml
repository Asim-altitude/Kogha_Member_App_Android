<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        >

        <ImageView
            android:id="@+id/back_navigation"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/back_arrow" />


        <ImageView
            android:id="@+id/splashImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        >

        <ImageView

            android:contentDescription="@string/app_name"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:tint="@color/black_color"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Member"
            android:gravity="right"
            android:textColor="@color/theme_primary"
            android:textSize="14sp"
            android:visibility="gone"
            android:textStyle="bold"

            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black_color"
        android:textSize="16sp"
        android:text="@string/member_signup_title"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/nameContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/txtFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/theme_primary" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_textview"
                android:visibility="gone">

                <!-- INPUT -->
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/username_icon"
                    android:background="@color/transparent"
                    android:hint="@string/enter_your_name"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/dark_gray_color" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/username_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_user"
                    android:tint="@color/theme_primary" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/emailContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/txtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/theme_primary" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview"
                android:visibility="gone">

                <!-- INPUT -->
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/email_icon"
                    android:background="@color/transparent"
                    android:hint="@string/enter_your_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/dark_gray_color" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_email"
                    android:tint="@color/theme_primary" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/phoneContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_phone"
                    android:inputType="phone"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/theme_primary" />

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview"
                android:visibility="gone">

                <!-- INPUT -->
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/phone_icon"
                    android:background="@color/transparent"
                    android:hint="@string/enter_your_phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/dark_gray_color" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/phone_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_mobile"
                    android:tint="@color/theme_primary" />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/icContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:hint="@string/enter_your_ic"
                    android:inputType="text"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/theme_primary" />

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview"
                android:visibility="gone">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/txtIC_Number"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/ic_num_image"
                    android:background="@color/transparent"
                    android:hint="@string/enter_your_ic"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/dark_gray_color" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/ic_num_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_mobile"
                    android:tint="@color/theme_primary" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview"
                android:visibility="gone">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/txtPassport_Number"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/passport_image"
                    android:background="@color/transparent"
                    android:hint="@string/enter_your_passport"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/dark_gray_color" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/passport_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_mobile"
                    android:tint="@color/theme_primary" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview"
                android:visibility="gone">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/password_icon"
                    android:background="@color/transparent"
                    android:hint="@string/enter_your_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/dark_gray_color" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/password_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_password"
                    android:tint="@color/theme_primary" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_textview"
                android:visibility="gone">

                <!-- INPUT -->
                <EditText
                    android:id="@+id/txtCPassword"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/cPassword_icon"
                    android:background="@color/transparent"
                    android:hint="@string/re_enter_your_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/black_color"
                    android:textColorHint="@color/dark_gray_color" />

                <!-- ICON -->
                <ImageView
                    android:id="@+id/cPassword_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_password"
                    android:tint="@color/theme_primary" />

            </RelativeLayout>

            <Button
                android:id="@+id/btnNext"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/tab_selected_bg"
                android:text="@string/register"
                android:textColor="@color/white_color"
                android:textSize="18sp"
                android:transitionName="@string/next" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtAlreadyAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/action_sign_in_short"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black_color"
                    android:textSize="18sp" />

                <View
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/light_black_color" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black_color"
        android:textSize="16sp"
        android:text="Member Registration"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />

</LinearLayout>
