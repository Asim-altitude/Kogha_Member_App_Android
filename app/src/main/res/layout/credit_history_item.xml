<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_rectangle_btn"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_light.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="Reference #"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black_color"
                />
            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_r.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="0011"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black_color"
                android:id="@+id/pay_id"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_semibold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="RM00"
                android:layout_margin="5dp"
                android:textColor="@color/black_color"
                android:id="@+id/transaction_amount_paid"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/arrow_right"
                android:rotation="-90"
                android:id="@+id/transaction_in_out_image"
                />
            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_r.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="..."
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/black_color"
                android:id="@+id/transaction_date"
                />
        </RelativeLayout>

        <asim.tgs_member_app.custom.CustomTextView
            app:font_text="m_r.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="...."
            android:layout_margin="5dp"
            android:textColor="@color/black_color"
            android:id="@+id/desc"
            />

    </LinearLayout>

</RelativeLayout>