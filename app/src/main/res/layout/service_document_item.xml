<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/doc_lay"
        android:layout_marginTop="20dp"
        android:background="@drawable/dotted_bg"
        >
        <ImageView
            android:id="@+id/doc_image"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:src="@drawable/document"
            android:layout_margin="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_r.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Curriculam Vitae/Bio Data"
                android:textColor="@color/black_color"
                android:textSize="@dimen/sub_header_registeration_size"
                android:gravity="left"
                android:textStyle="bold"
                android:id="@+id/doc_name"
                />
            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_r.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Your CV/Bio Data"
                android:textColor="@color/dark_gray_color"
                android:textSize="@dimen/sub_header_third_registeration_size"
                android:gravity="left"
                android:textStyle="bold"
                android:id="@+id/doc_sub_name"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>