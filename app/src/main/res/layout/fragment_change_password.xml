<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white_color"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp">



    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_logo"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:id="@+id/splashImage"
        android:layout_gravity="center_horizontal"
        android:tint="@color/black_color"
        android:src="@drawable/logo"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_r.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark_gray_color"
                android:textStyle="bold"
                android:text="Old Password"
                />
            <asim.tgs_member_app.custom.CustomEditText
                app:font_text="m_r.otf"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text=""
                android:inputType="textPassword"
                android:hint=" e.g 'xxxxxx'"
                android:background="@drawable/grey_rect_empty"
                android:imeOptions="actionNext"
                android:id="@+id/txt_oldPass"
                />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_r.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark_gray_color"
                android:textStyle="bold"
                android:text="New Password"
                />
            <asim.tgs_member_app.custom.CustomEditText
                app:font_text="m_r.otf"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text=""
                android:inputType="textPassword"
                android:hint=" e.g 'xxxxxx'"
                android:background="@drawable/grey_rect_empty"
                android:imeOptions="actionNext"
                android:id="@+id/txtPassword"
                />
        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <asim.tgs_member_app.custom.CustomTextView
                app:font_text="m_r.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/dark_gray_color"
                android:textStyle="bold"
                android:text="Confirm Password"
                />
            <asim.tgs_member_app.custom.CustomEditText
                app:font_text="m_r.otf"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="16sp"
                android:textColor="@color/black_color"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text=""
                android:inputType="textPassword"
                android:hint=" e.g 'xxxxxx'"
                android:background="@drawable/grey_rect_empty"
                android:imeOptions="actionNext"
                android:id="@+id/txtCPassword"
                />
        </LinearLayout>




    </RelativeLayout>


    <Button
        android:id="@+id/btnChangePassword"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/next_btn_drawable"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white_color"
        android:text="@string/change_pass"/>

</LinearLayout>

</ScrollView>