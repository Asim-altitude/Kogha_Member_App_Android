<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp">



    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_logo"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:id="@+id/splashImage"
        android:layout_gravity="center_horizontal"
        android:tint="@color/black_color"
        android:src="@drawable/logo"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_textview">

        <!-- INPUT -->
        <EditText
            android:id="@+id/txt_oldPass"
            android:layout_toRightOf="@+id/old_pass_icon"
            android:hint="@string/old_pass"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/black_color"
            android:textColorHint="@color/dark_gray_color"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <!-- ICON -->
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_password"
            android:id="@+id/old_pass_icon"
            android:layout_width="20dp"
            android:tint="@color/theme_primary"
            android:layout_height="20dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_textview">


        <!-- INPUT -->
        <EditText
            android:id="@+id/txtPassword"
            android:layout_toRightOf="@+id/password_icon"
            android:hint="@string/new_pass"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/black_color"
            android:textColorHint="@color/dark_gray_color"
            android:background="@color/transparent"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <!-- ICON -->
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/password_icon"
            android:src="@drawable/ic_password"
            android:layout_width="20dp"
            android:tint="@color/theme_primary"
            android:layout_height="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_textview">

        <!-- INPUT -->
        <EditText
            android:id="@+id/txtCPassword"
            android:layout_toRightOf="@+id/cPassword_icon"
            android:hint="@string/confirm_pass"
            android:padding="10dp"
            android:maxLines="1"
            android:textColor="@color/black_color"
            android:textColorHint="@color/dark_gray_color"
            android:background="@color/transparent"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <!-- ICON -->
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/cPassword_icon"
            android:src="@drawable/ic_password"
            android:layout_width="20dp"
            android:tint="@color/theme_primary"
            android:layout_height="20dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnChangePassword"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white_color"
        android:text="@string/change_pass"/>

</LinearLayout>

</ScrollView>