<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:id="@+id/main_item_layout"
        android:background="@drawable/order_item_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle_thick" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/notification"
                        android:tint="@color/white_color" />
                </RelativeLayout>

                <asim.tgs_member_app.utils.CustomTextView
                    android:id="@+id/notification_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Job Alert"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black_color"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:font_text="OpenSans_Bold.ttf" />
            </LinearLayout>

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:text="time"
                android:textColor="@color/theme_primary"
                android:textSize="12dp"
                android:textStyle="normal"
                android:visibility="visible" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this is my notification message "
            android:id="@+id/notification_body"
            android:textSize="13dp"
            android:textColor="@color/black_color"
            android:minLines="2"
            android:gravity="start"
            android:layout_margin="10dp"
            />

    </LinearLayout>
</LinearLayout>